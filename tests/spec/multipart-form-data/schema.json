{
  "openapi": "3.0.0",
  "info": {
    "title": "Multipart Form Data Test API",
    "version": "1.0.0"
  },
  "paths": {
    "/upload": {
      "put": {
        "summary": "Upload a file",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File uploaded successfully"
          }
        }
      }
    }
  }
}
